<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Login.Screen" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.Barcode.Scanner.Screen" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="Theme.Scan.Result.Screen" parent="AppTheme">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
    </style>

    <style name="Template.Button.Scan.Result.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="colorButtonNormal">@color/colorWhite</item>
    </style>

    <style name="Template.Button.Login.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="colorButtonNormal">@color/colorGreen</item>
    </style>
</resources>
